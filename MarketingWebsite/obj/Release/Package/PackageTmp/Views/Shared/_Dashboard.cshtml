@{
    Layout = null;
}
<!DOCTYPE html>
<html data-ng-app="iriskApp">
<head>
    <title>Dashboard</title>
    <link href="Content/bootstrap.css" rel="stylesheet" />
    <link href="Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="Content/dashboard-styles.css" rel="stylesheet" />
</head>
<body>
    <div ng-controller="RootController">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand " href="#/">
                        <img src="Content/Images/people.png" alt="logo">{{ loggedInUser.CompanyName }} Dashboard
                    </a>
                    <ul class="nav nav-pills" data-ng-controller="NavbarController">
                        <li ng-show="loggedInUser.IsAdminUser" data-ng-class="{'active':getClass('/users')}"><a href="#/users">Users</a></li>
                    </ul>

                    <ul class="nav pull-right">
                        <li><a href="" title="Logged in as {{ loggedInUser.EmailAddress }}" ng-click="goToMyAccount()">My Account</a></li>
                        <li>@Html.ActionLink("Log out", "LogOut")</li>
                    </ul>
                </div>
            </div>
        </div>


        @RenderBody()


        <div id="footer">
            <div class="navbar navbar-fixed-bottom">
                <div class="navbar-inner">
                    <div class="container">
                        <footer>
                            <div class="row">
                                <div class="span4">
                                    Created by Mark Short
                                </div>
                            </div>
                       </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vendor Libs: jQuery only used for Bootstrap functionality -->
    <script src="Scripts/angular.js"></script>
    <script src="Scripts/jquery.min.js"></script>

    <!-- UI Libs -->
    @*<script src="Scripts/bootstrap.js"></script>*@
    <script src="../../Scripts/ui-bootstrap-0.3.0.js" type="text/javascript"></script>

    <!-- App libs -->
    <script src="angular/app.js"></script>
    <script src="angular/controllers/rootController.js" type="text/javascript"></script>
    <script src="angular/controllers/controllers.js"></script>
    <script src="angular/controllers/usersController.js"></script>
    <script src="angular/controllers/userDetailsController.js"></script>
    <script src="angular/controllers/userAddController.js"></script>
    <script src="angular/services/customersService.js"></script>
    <script src="angular/directives/animatedView.js"></script>
    <script src="angular/services/services.js" type="text/javascript"></script>
    <script src="angular/directives/repeatPassword.js" type="text/javascript"></script>
</body>
</html>
